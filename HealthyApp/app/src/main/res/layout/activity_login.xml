<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activities.LoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="547dp"
        android:layout_height="1309dp"

        android:layout_marginTop="-10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.124"
        app:srcCompat="@drawable/bg56789" />

    <EditText
        android:backgroundTint="@color/peach"
        android:layout_height="wrap_content"
        android:layout_width="350dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/loginEmail"
        android:textColorHint="@color/peach"
        app:layout_constraintVertical_bias="0.30"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@id/loginPassword"
        android:textColor="@color/peach"
        android:textSize="20dp"
        android:inputType="textPersonName"
        android:hint="Email Address"
        android:background="@drawable/border"
        android:ems="10"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="350dp"
        android:backgroundTint="@color/peach"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/loginPassword"
        app:layout_constraintVertical_chainStyle="packed"
        android:textColor="@color/peach"
        android:inputType="textPassword"
        android:hint="Password"
        android:textSize="20dp"
        android:textColorHint="@color/peach"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:background="@drawable/border"
        app:layout_constraintTop_toBottomOf="@id/loginEmail"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/loginb"
        android:textColor="@color/red"
        android:fontFamily="@font/gentiumbasicbold"
        android:textSize="22dp"
        app:layout_constraintTop_toBottomOf="@+id/loginPassword"
        android:background="@drawable/shape_button_background"
        app:layout_constraintHorizontal_bias="0.5"
        android:text="LogIn"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/createAccount"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:textColor="@color/red"
        android:fontFamily="@font/gentiumbasicbold"
        android:background="@drawable/shape_button_background"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginb" />

</androidx.constraintlayout.widget.ConstraintLayout>