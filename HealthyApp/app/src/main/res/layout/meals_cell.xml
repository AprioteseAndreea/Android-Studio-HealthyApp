<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <!--    <ImageView-->
<!--        android:id="@+id/meals_image"-->
<!--        android:layout_width="100dp"-->
<!--        android:layout_height="100dp"-->
<!--        android:layout_marginTop="10dp"-->
<!--        android:layout_marginBottom="10dp"-->

<!--        app:srcCompat="@drawable/ic_baseline_fastfood_24" />-->
    <TextView
        android:id="@+id/meals_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:maxLines="2"
        android:text="Name"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/meals_image"
        android:fontFamily="@font/gentiumbasicbold"
        android:textColor="@color/peach"
        android:textColorHighlight="@color/black"
        android:textSize="20dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/meals_image"
        app:civ_border_width="2dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_baseline_fastfood_24"
        app:civ_border_color="@color/peach"
        android:layout_width="95dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="7dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="95dp"/>

    <TextView
        android:id="@+id/meals_kcals"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="kcals"
        android:fontFamily="@font/gentiumbasicbegular"
        android:textColor="@color/peach"
        app:layout_constraintTop_toBottomOf="@id/meals_name"
        app:layout_constraintStart_toEndOf="@id/meals_image"
        android:layout_marginLeft="7dp"
        android:textSize="18dp" />




</androidx.constraintlayout.widget.ConstraintLayout>