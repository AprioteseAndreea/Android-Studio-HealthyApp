<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/gradient_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/background_workout">
    </ImageView>
    <TextView
        android:id="@+id/workout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/gradient_background"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        android:text="Full Body Workout"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textColor="@color/purple_700"
        android:fontFamily="@font/gentiumbasicbold"/>
    <ImageView
        android:id="@+id/clock_icon"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/purpleclock"
        app:layout_constraintStart_toStartOf="@id/gradient_background"
        app:layout_constraintTop_toBottomOf="@id/workout_title" />
    <TextView
        android:id="@+id/workout_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/clock_icon"
        app:layout_constraintTop_toBottomOf="@id/workout_title"
        android:textSize="26dp"
        android:text="15 min"
        android:textColor="@color/purple_700"
        android:fontFamily="@font/gentiumbasicbegular"
        />
    <ImageView
        android:id="@+id/calendar_icon"
        android:layout_width="34dp"
        android:layout_height="36dp"
        android:src="@drawable/iconcalendar"
        android:layout_marginLeft="100dp"
        app:layout_constraintStart_toEndOf="@id/workout_time"
        app:layout_constraintTop_toBottomOf="@id/workout_title" />
    <TextView
        android:id="@+id/day_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/calendar_icon"
        app:layout_constraintTop_toBottomOf="@id/workout_title"
        android:textSize="26dp"
        android:text="Day:"
        android:textColor="@color/purple_700"
        android:fontFamily="@font/gentiumbasicbegular"
        />

    <TextView
        android:id="@+id/workout_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/day_label"
        app:layout_constraintTop_toBottomOf="@id/workout_title"
        android:textSize="26dp"
        android:text="1"
        android:layout_marginLeft="3dp"
        android:textColor="@color/purple_700"
        android:fontFamily="@font/gentiumbasicbegular"
        />
</androidx.constraintlayout.widget.ConstraintLayout>